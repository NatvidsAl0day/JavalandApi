{
  "version": 2,
  "builds": [
    { "src": "api/index.js",    "use": "@vercel/node" },
    { "src": "api/routes/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/routes/(.*)", "dest": "api/routes/$1.js" },
    // lalu catch-all terakhir kalau perlu
    { "src": "/(.*)",            "dest": "api/index.js" }
  ]
}
